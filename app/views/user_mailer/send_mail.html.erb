    .project-des{
        margin-left: 8px;
        width: 90%;
    }
    .project-des h4{
        margin: 0px;
    }
    .project-des p{
        margin-top: 5px;
    }
    .fl{
        float: left;
    }
    .block{
        display: block;
    }
    .title{
        text-align: center;
    }
    .list-unstyled{padding-left:0;list-style:none}
    .container{
        width: 800px;
        margin: auto;
        border: 2px solid #9CF;
        padding: 30px;
    }
    .ranking{
        width: 20px;
        height: 30px;
        padding: 10px;
        text-align: center;
        line-height:30px;
        font-size: 16px;
        color: #337ab7;
        background: rgba(232, 232, 232, 0.46);
        border-radius: 5px;
    }
    a{
        text-decoration: none;
    }
    a:hover{
        color: #2e6da4;
    }
    .clear{
        clear: both;
    }
</style>
<body>
<div class="container">
  <div class="title"><h3>上周TOP 10</h3></div>
  <ul class="project-list list-unstyled">
    <% index=1; @projects.each do |project|%>
        <li class="data-li">
          <span class="fl block ranking"><%=index%></span>
          <div class="project-des fl">
            <h4><a href="<%=@host%>/projects/<%=project.id%>"><%=project.title%></a></h4>
            <p><%=project.intro_content[0,65]%></p>
          </div>
        </li>
        <% index+=1; %>
    <% end %>
  </ul>
  <div class="clear"></div>
</div>
</body>
