<% content_for :head do %>
  <link href="/css/modal.css" type="text/css" rel="stylesheet">
<% end %>

<body>

<%= render "shared/right_top_main" %>

<div class="container">
  <ul id="project-list">
      <div class="projects-wapper">
        <ul id="day-project-list" class="project-list list-unstyled">

          <% @projects.each do |project| %>
          <li class="data-li">
            <button class="btn fl up_bt">
              <span class="up_icon glyphicon glyphicon-triangle-top block"></span>
              <!-- TODO 点赞 -->
              <span class="up_num ">12</span>
            </button>
            <!-- TODO 项目 -->
            <div class="project-des fl">
              <h4><a href="/projects/<%= project.id %>"><%= project.title %></a></h4>
              <p><%= project.intro_content %></p>
              <p>创建者id:<%= project.user_id %></p>
              <p>项目地址:<%= project.source_url %></p>
              <p>项目语言:<%= project.language %></p>
              <p>状态:<%= project.status %></p>
              <p>创建时间:<%= project.created_at %></p>
              <p>更新时间:<%= project.updated_at %></p>
            </div>
            <div class="up_user_list fr">
              <ul class="nav nav-pills">
                <li class="user_ava_li">
                  <img class="img-responsive user-avatar" src="/images/logo.png"></img>
                </li>
                <li class="user_ava_li">
                  <img class="img-responsive user-avatar" src="/images/logo.png"></img>
                  <div class="project-comment">
                    <!-- TODO 评论 -->
                    <a class="project-comments">2</a>
                  </div>
                </li>
              </ul>
            </div>
          </li>
          <% end %>

        </ul>
      </div>
    </li>
  </ul>
</div>
